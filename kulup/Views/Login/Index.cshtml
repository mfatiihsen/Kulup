@{
  ViewData["Title"] = "Giriş Yap";
}

@model LoginModel

<style>
  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, #74ebd5, #ACB6E5);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .login-container {
    background: #ffffff;
    padding: 40px 30px;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    margin-top: 50px;
  }

  .login-container h2 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    color: #555;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .form-group input:focus {
    border-color: #4A90E2;
    outline: none;
  }

  .login-button {
    margin-top: 20px;
    width: 100%;
    padding: 12px;
    background-color: #fff;
    border: 1px solid #74ebd5;
    color: #74ebd5;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.4s ease-in-out;
  }

  .login-button:hover {
    background-color: #74ebd5;
    color: #fff;
  }

  .bottom-text {
    text-align: center;
    margin-top: 16px;
    font-size: 14px;
    color: #666;
  }

  .bottom-text a {
    color: #74ebd5;
    text-decoration: none;
  }

  .form-group input {
    border: 1px solid #74ebd5;
  }

  


</style>


<div class="login-container">
  <h2>Giriş Yap</h2>
  <form action="/Login/Login" method="post">
    <div class="form-group">
      <input placeholder="E-Posta" type="email" id="email" name="Email" required>
    </div>
    <div class="form-group">
      <input placeholder="Parola" type="password" id="password" name="Sifre" required>
    </div>
    <button type="submit" class="login-button">Giriş</button>
  </form>
  <div class="bottom-text">
    Hesabın yok mu? <a href="/Register">Kayıt Ol</a>
  </div>
</div>
